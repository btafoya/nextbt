{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "nextbt-remote": {
      "type": "sse",
      "url": "${MCP_REMOTE_URL:-http://localhost:3000/api/mcp/sse}",
      "headers": {
        "Authorization": "Bearer ${MCP_REMOTE_AUTH_KEY}"
      },
      "disabled": false
    }
  }
}
